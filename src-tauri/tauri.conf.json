{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5555/",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "WeChatFerry",
    "version": "39.2.2"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.iamteer.wcf",
      "icon": [
        "icons/icon.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        ".\\src\\wcferry\\lib"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [{
      "maximized": false,
      "fullscreen": false,
      "minHeight": 800,
      "resizable": true,
      "title": "WcfRust",
      "minWidth": 900
    }]
  }
}